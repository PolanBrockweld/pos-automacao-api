{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Cadastro e Autenticação",
    "version": "1.0.0",
    "description": "API para aprendizado de automação de testes."
  },
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Registra um novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" },
                  "role": { "type": "string", "enum": ["user", "admin"] }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Usuário criado" },
          "400": { "description": "Erro de validação" }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login do usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "JWT válido" },
          "401": { "description": "Credenciais inválidas" }
        }
      }
    },
    "/CadastroAluno": {
      "get": {
        "summary": "Lista todos os alunos",
        "responses": {
          "200": { "description": "Lista de alunos" }
        }
      },
      "post": {
        "summary": "Cria novo aluno",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": { "type": "string" },
                  "email": { "type": "string" }
                },
                "required": ["nome", "email"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Aluno criado" },
          "400": { "description": "Erro de validação" },
          "401": { "description": "Não autorizado" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
